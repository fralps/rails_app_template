<section>
  <div class="container">
    <div class="row">
      <div class="col col-6 mx-auto">
        <h2 class="text-center mt-5">Modifier mon mot de passe</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'Nouveau mot de passe (6 caractÃ¨res minimum)', class: 'form-control mb-3 mt-3' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmation du nouveau mot de passe', class: 'form-control mb-3' %>
        </div>

        <div class="actions">
          <%= f.submit "Modifier mon mot de passe", class: 'bnt btn-primary form-control mb-3' %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
