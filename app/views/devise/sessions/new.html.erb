<section>
  <div class="container">
    <div class="row">
      <div class="col col-6 mx-auto">
        <h2 class="text-center mt-5 mb-3">Connexion</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control mb-3' %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Mot de passe', class: 'form-control mb-3' %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Se souvenir de moi' %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Je me connecte", class: 'btn btn-primary form-control mb-3' %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
